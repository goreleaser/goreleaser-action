{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2024",
    "module": "ESNext",
    "newLine": "lf",
    "outDir": "./lib",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "jest.config.ts"
  ]
}
